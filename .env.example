# Faucet Configuration for Selendra EVM
# Copy this file to .env and fill in your values

# Frontend Configuration (for Vercel deployment)
VITE_API_URL=http://localhost:3001

# Backend Server Configuration (for koompi.cloud deployment)
# Server Port (default: 3001)
PORT=3001

# Network Configuration
# Use either mainnet or testnet settings

# Mainnet Configuration
MAINNET_RPC_ENDPOINT=https://rpc.selendra.org
MAINNET_FAUCET_AMOUNT=0.01

# Testnet Configuration
TESTNET_RPC_ENDPOINT=https://rpc-testnet.selendra.org
TESTNET_FAUCET_AMOUNT=10

# Faucet Wallet Private Key (REQUIRED)
# This private key will be used for both mainnet and testnet
# WARNING: Keep this secret! Never commit to version control
FAUCET_PRIVATE_KEY=your-private-key-here
